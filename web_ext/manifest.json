{
  "name": "Rakshak",
  "description": "An extension that helps to prevent cyber bullying.",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "./icons/icon48.png"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "options_page": "./html/options.html",
  "browser_action": {
    "default_popup": "./html/popup.html",
    "default_title": "Rakshak Web Extension"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "*://www.youtube.com/*",
    "*://www.facebook.com/*",
    "*://www.instagram.com/*",
    "*://twitter.com/*",
    "http://*/*"
  ]
}
